<?xml version="1.0" encoding="utf-8"?>
<!-- Save this as rounded_button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#2196F3"/> <!-- Ganti dengan warna biru yang diinginkan -->

    <!-- Corner Radius for rounded corners -->
    <corners android:radius="10dp"/> <!-- Sesuaikan radius sudut sesuai kebutuhan -->

    <!-- Optional: Padding inside the shape -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp"/>

</shape>
